//CORTES ROJAS HUMBERTO
package cuestionario.de.clase.poo;


public class Rectàngulo {
private double altura;
private double base;


    public double getAltura() {
        return altura;
    }

    public void setAltura(double altura) {
        this.altura = altura;
    }

    public double getBase() {
        return base;
    }

    public void setBase(double base) {
        this.base = base;
    }
    
    public double perimetro (){
    double result = 2*(base)+ 2*(altura);
    return result;
    }
    
    public double area (){
    double result = base*altura;
    return result;      
    }

    @Override
    public String toString() {
        return "Rect\u00e0ngulo{" + "altura=" + altura + ", base=" + base + 
                "perimetro= " + perimetro() + "area" + area();
    }

    

   
    
    





    
}

